<!-- hero section -->
<div class="row">
    <div id="hero-small" style="background-image:url('../images/meals/{{meal.image}}');">
        <div class="overlay"></div>
        <div class="content">
            <h1>For {{meal.category}}</h1>
        </div>
    </div>
</div>

{{!-- content section --}}

<!-- content | meal page -->
<div id="meal" class="row">

    <div class="meal-page">
        <div class="image">
            <img class="img-responsive" src="../images/meals/{{meal.image}}">
        </div>

        <div class="info">
            <h2 class="title"><img src="../images/icons/card/{{meal.type}}.png"> {{meal.title}}</h2>
            <div class="stats center">
                <div class="first">
                    <img src="../images/icons/card/time.png">
                    <span class="num">{{meal.cookingTime}}</span>
                    <span class="text">minutes</span>
                </div>
                <div class="mid">
                    <img src="../images/icons/card/servings.png">
                    <span class="num">{{meal.servings}}</span>
                    <span class="text">servings</span>
                </div>
                <div class="last">
                    <img src="../images/icons/card/label.png">
                    <span class="num">{{meal.price}}</span>
                    <span class="text">$/meal</span>
                </div>
                <div class="big">
                    <img src="../images/icons/card/calories.png">
                    <span class="num">{{meal.calories}}</span>
                    <span class="text">calories</span>
                </div>
            </div>

            <p class="description">{{meal.description}}</p>

            {{#if user.loggedIn}}
            <div class="center">
                <a id="add-to-cart" onclick="addToCart('{{meal._id}}');"><button id="cart-btn" class="addcart"><img class="cta-icon img-responsive" src="../images/icons/add-to-basket.png"> Add To Cart</button></a>
            </div>
            {{else}}
            <div class="center">
                <a class="login"><button class="addcart login-btn">Login To Add To Cart</button></a>
            </div>
            {{/if}}
        </div>   
    </div>

    <!-- content | related meals -->
    <div id="top-meals" class="row center">
        <h2>- MORE MEALS -</h2>

        {{#each extraMeals}}                   
            {{>top-meal}}
        {{/each}}
    </div>

</div>